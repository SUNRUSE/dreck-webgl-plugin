{
  "name": "dreck-webgl-plugin",
  "description": "Adds a library of TypeScript classes to a Dreck project for interacting with WebGL.",
  "version": "0.0.0",
  "engines": {
    "node": ">=12.22.12"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "restricted"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SUNRUSE/dreck-webgl-plugin"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "4.6.4",
    "@types/node": "17.0.35",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jasmine": "4.6.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "typescript": "4.7.2"
  },
  "scripts": {
    "buildClean": "rm -f \"./src/**/*.js\" \"./tests/**/*.js\"",
    "buildLint": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "buildLintFix": "eslint --fix \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "buildTypeScript": "tsc --project ./tsconfig.json",
    "buildJasmine": "jasmine --config=jasmine.json",
    "buildNyc": "nyc --check-coverage --all --include \"index.js\" --lines 100 --functions 100 --branches 100 --statements 100 npm run-script buildJasmine",
    "test": "npm-run-all buildClean buildLintFix buildTypeScript buildNyc"
  }
}
